<!-- Fachada para la carga de fuentes -->
<style>
  /* Estilos de fallback mientras se cargan las fuentes */
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
</style>

<!-- Script para cargar las fuentes de manera diferida -->
<script>
  // Función para cargar las fuentes
  function loadFonts() {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap';
    document.head.appendChild(link);
  }

  // Cargar las fuentes cuando el documento esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadFonts);
  } else {
    loadFonts();
  }
</script> 