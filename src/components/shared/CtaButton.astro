---
import Button from "./Button.astro";

interface Props {
  color?: "primary" | "secondary" | "cta";
  variant?: "solid" | "gradient" | "outline";
}

const { 
  color = "primary",
  variant = "gradient"
} = Astro.props;
---

<Button 
  color={color} 
  variant={variant} 
  className={"min-w-max group relative overflow-hidden transition-all duration-300 shadow-lg hover:shadow-xl focus:ring-2 focus:ring-cta/50 focus:outline-none"}
>
  <span
    class="flex relative z-[5] font-medium text-lg font-medium tracking-wide text-black dark:text-white transition-colors duration-300 group-hover:text-black dark:group-hover:text-white group-active:text-black/90 dark:group-active:text-white/90"
  >
    <slot />
  </span>
  <div class="absolute inset-0 bg-gradient-to-r from-cta/0 via-cta/40 to-cta/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
</Button>
